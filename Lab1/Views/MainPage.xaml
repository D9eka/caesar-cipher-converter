<Page x:Class="Lab1.MainPage"
      xmlns:conv="using:Lab1.Converters"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Lab1"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodels="using:Lab1.ViewModels"
      d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <conv:MessageTypeToBrushBackgroundConverter x:Key="MessageTypeToBrushBackgroundConverter"/>
        <conv:MessageTypeToBrushForegroundConverter x:Key="MessageTypeToBrushForegroundConverter"/>
        <conv:MessageTypeToSymbolConverter x:Key="MessageTypeToSymbolConverter"/>

        <!-- Styles -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefault}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefault}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource SubtitleTextBlockStyle}">
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </Page.Resources>

    <Grid x:Name="RootGrid">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainScrollViewer.Visibility" Value="Visible"/>
                        <Setter Target="MainGrid.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1000"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainScrollViewer.Visibility" Value="Collapsed"/>
                        <Setter Target="MainGrid.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!-- ScrollViewer для узких экранов -->
        <ScrollViewer x:Name="MainScrollViewer" Visibility="Collapsed" Padding="20" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Input Panel -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Ввод текста" Style="{StaticResource HeaderTextStyle}"/>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <TextBox Header="Текст для обработки"
                                     PlaceholderText="Введите текст или используйте кнопку 'Вставить'"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Text="{Binding InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </ScrollViewer>

                        <Button Content="Вставить из буфера" Grid.Row="2" Command="{Binding PasteCommand}" Style="{StaticResource PrimaryButtonStyle}"/>

                        <StackPanel Grid.Row="3" Spacing="10">
                            <ComboBox Header="Алфавит"
                                      ItemsSource="{Binding Alphabets}"
                                      DisplayMemberPath="UiName"
                                      SelectedItem="{Binding SelectedAlphabet, Mode=TwoWay}"
                                      Style="{StaticResource ComboBoxStyle}"/>
                            <ComboBox Header="Операция"
                                      ItemsSource="{Binding Operations}"
                                      DisplayMemberPath="UiName"
                                      SelectedItem="{Binding SelectedOperation, Mode=TwoWay}"
                                      Style="{StaticResource ComboBoxStyle}"/>
                            <ComboBox Header="Сдвиг"
                                      ItemsSource="{Binding Shifts}"
                                      SelectedItem="{Binding SelectedShift, Mode=TwoWay}"
                                      Visibility="{Binding ShiftVisibility}"
                                      Style="{StaticResource ComboBoxStyle}"/>
                        </StackPanel>

                        <Button Content="Выполнить" Grid.Row="4" Command="{Binding CalculateCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                    </Grid>
                </Border>

                <!-- Output Panel -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Результат" Style="{StaticResource HeaderTextStyle}"/>
                        <!-- Ошибки -->
                        <Border Grid.Row="1"
                                Background="{Binding ErrorType, Converter={StaticResource MessageTypeToBrushBackgroundConverter}}"
                                BorderBrush="{Binding ErrorType, Converter={StaticResource MessageTypeToBrushBackgroundConverter}}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="8"
                                Margin="0,0,0,10"
                                Visibility="{Binding ErrorVisibility}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <SymbolIcon Symbol="{Binding ErrorType, Converter={StaticResource MessageTypeToSymbolConverter}}"
                                            Foreground="{Binding ErrorType, Converter={StaticResource MessageTypeToBrushForegroundConverter}}"/>
                                <TextBlock Text="{Binding ErrorMessage}"
                                           Foreground="{Binding ErrorType, Converter={StaticResource MessageTypeToBrushForegroundConverter}}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <TextBox Header="Результат обработки"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     IsReadOnly="True"
                                     Text="{Binding OutputText}"/>
                        </ScrollViewer>

                        <!-- OutputShift блок -->
                        <Grid Grid.Row="3" Visibility="{Binding OutputShiftVisibility}" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="Копировать результат" Command="{Binding CopyCommand}" Margin="0,10,8,0" Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button Grid.Column="1" Content="{Binding OutputShiftLabel}" Command="{Binding CopyShiftCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                        </Grid>

                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Основной Grid для широких экранов -->
        <Grid x:Name="MainGrid" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Input Panel -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Ввод текста" Style="{StaticResource HeaderTextStyle}"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <TextBox Header="Текст для обработки"
                                 PlaceholderText="Введите текст или используйте кнопку 'Вставить'"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Text="{Binding InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </ScrollViewer>

                    <Button Content="Вставить из буфера" Grid.Row="2" Command="{Binding PasteCommand}" Style="{StaticResource PrimaryButtonStyle}"/>

                    <Grid Grid.Row="3" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Header="Алфавит"
                                  ItemsSource="{Binding Alphabets}"
                                  DisplayMemberPath="UiName"
                                  SelectedItem="{Binding SelectedAlphabet, Mode=TwoWay}"
                                  Style="{StaticResource ComboBoxStyle}"
                                  Grid.Column="0" Margin="0,0,10,0"/>
                        <ComboBox Header="Операция"
                                  ItemsSource="{Binding Operations}"
                                  DisplayMemberPath="UiName"
                                  SelectedItem="{Binding SelectedOperation, Mode=TwoWay}"
                                  Style="{StaticResource ComboBoxStyle}"
                                  Grid.Column="1" Margin="0,0,10,0"/>
                        <ComboBox Header="Сдвиг"
                                  ItemsSource="{Binding Shifts}"
                                  SelectedItem="{Binding SelectedShift, Mode=TwoWay}"
                                  Visibility="{Binding ShiftVisibility}"
                                  Style="{StaticResource ComboBoxStyle}"
                                  Grid.Column="2" Margin="0"/>
                    </Grid>

                    <Button Content="Выполнить" Grid.Row="4" Command="{Binding CalculateCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                </Grid>
            </Border>

            <!-- Output Panel -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Результат" Style="{StaticResource HeaderTextStyle}"/>
                    <!-- Ошибки -->
                    <Border Grid.Row="1"
                            Background="{Binding ErrorType, Converter={StaticResource MessageTypeToBrushBackgroundConverter}}"
                            BorderBrush="{Binding ErrorType, Converter={StaticResource MessageTypeToBrushBackgroundConverter}}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,0,0,10"
                            Visibility="{Binding ErrorVisibility}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <SymbolIcon Symbol="{Binding ErrorType, Converter={StaticResource MessageTypeToSymbolConverter}}"
                                        Foreground="{Binding ErrorType, Converter={StaticResource MessageTypeToBrushForegroundConverter}}"/>
                            <TextBlock Text="{Binding ErrorMessage}"
                                       Foreground="{Binding ErrorType, Converter={StaticResource MessageTypeToBrushForegroundConverter}}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <TextBox Header="Результат обработки"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 IsReadOnly="True"
                                 Text="{Binding OutputText}"/>
                    </ScrollViewer>

                    <!-- OutputShift блок -->
                    <Grid Grid.Row="3" Visibility="{Binding OutputShiftVisibility}" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="Копировать результат" Command="{Binding CopyCommand}" Margin="0,10,8,0" Style="{StaticResource PrimaryButtonStyle}"/>
                        <Button Grid.Column="1" Content="{Binding OutputShiftLabel}" Command="{Binding CopyShiftCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>